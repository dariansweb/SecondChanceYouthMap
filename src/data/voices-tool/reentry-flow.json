{
  "pre-release-planning": {
    "id": "pre-release-planning",
    "label": "Pre-Release Planning Meeting",
    "fields": [
      {
        "type": "date",
        "name": "planningDate",
        "label": "Date of Pre-Release Planning"
      },
      {
        "type": "select",
        "name": "releaseType",
        "label": "Type of Release",
        "options": [
          { "label": "Scheduled Release", "value": "scheduled" },
          { "label": "Conditional Early Release", "value": "early" },
          { "label": "Emergency/Unplanned", "value": "emergency" }
        ]
      },
      {
        "type": "textarea",
        "name": "teamNotes",
        "label": "Team Notes from Planning Meeting"
      }
    ],
    "next": ["housing-placement"]
  },
  "housing-placement": {
    "id": "housing-placement",
    "label": "Housing & Placement Setup",
    "fields": [
      {
        "type": "input",
        "name": "placementLocation",
        "label": "Where will the youth live after release?"
      },
      {
        "type": "checkbox",
        "name": "verifiedSafe",
        "label": "Housing verified as safe and stable"
      },
      {
        "type": "checkbox",
        "name": "needsFurnitureOrSupplies",
        "label": "Household needs furniture or essential supplies"
      },
      {
        "type": "textarea",
        "name": "placementNotes",
        "label": "Additional Housing Placement Notes"
      }
    ],
    "next": ["education-plan"]
  },
  "education-plan": {
    "id": "education-plan",
    "label": "Education / Enrollment Plan",
    "fields": [
      {
        "type": "checkbox",
        "name": "returningToSchool",
        "label": "Youth will return to traditional school"
      },
      {
        "type": "checkbox",
        "name": "alternativeEducation",
        "label": "Enrolled in alternative education or GED program"
      },
      {
        "type": "input",
        "name": "schoolContact",
        "label": "School or Program Contact Name"
      },
      {
        "type": "textarea",
        "name": "educationBarriers",
        "label": "Barriers to Enrollment or Attendance"
      }
    ],
    "next": ["employment-support"]
  },
  "employment-support": {
    "id": "employment-support",
    "label": "Workforce or Vocational Support",
    "fields": [
      {
        "type": "checkbox",
        "name": "interestedInEmployment",
        "label": "Youth is interested in employment or job training"
      },
      {
        "type": "select",
        "name": "employmentPlanType",
        "label": "Employment Readiness Plan",
        "options": [
          { "label": "Job Training Program", "value": "training" },
          { "label": "Resume & Interview Prep", "value": "prep" },
          { "label": "Internship Placement", "value": "internship" },
          { "label": "Not Applicable", "value": "na" }
        ]
      },
      {
        "type": "textarea",
        "name": "employmentNotes",
        "label": "Employment Plan Notes"
      }
    ],
    "next": ["post-release-followup"]
  },
  "post-release-followup": {
    "id": "post-release-followup",
    "label": "Post-Release Check-In",
    "fields": [
      {
        "type": "date",
        "name": "firstCheckInDate",
        "label": "First Scheduled Check-In Date"
      },
      {
        "type": "checkbox",
        "name": "servicesInPlace",
        "label": "Reentry services successfully initiated"
      },
      {
        "type": "textarea",
        "name": "followUpNotes",
        "label": "Additional Follow-Up Notes"
      }
    ],
    "next": ["dashboard"]
  }
}
